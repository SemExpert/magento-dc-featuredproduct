<config>
    <modules>
        <Dc_FeaturedProduct>
            <version>1.1.0</version>
        </Dc_FeaturedProduct>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Dc_FeaturedProduct after="Mage_Adminhtml">Dc_FeaturedProduct_Adminhtml</Dc_FeaturedProduct>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <featuredproduct>
                    <file>dc/featuredproduct.xml</file>
                </featuredproduct>
            </updates>
        </layout>
        <translate>
            <modules>
                <featuredproduct>
                    <files>
                        <default>Dc_FeaturedProduct.csv</default>
                    </files>
                </featuredproduct>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <featuredproduct>
                    <file>dc/featuredproduct.xml</file>
                </featuredproduct>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <featuredproduct>
                <class>Dc_FeaturedProduct_Block</class>
            </featuredproduct>
        </blocks>
        <helpers>
            <featuredproduct>
                <class>Dc_FeaturedProduct_Helper</class>
            </featuredproduct>
        </helpers>
        <models>
            <featuredproduct>
                <class>Dc_FeaturedProduct_Model</class>
                <resourceModel>featuredproduct_resource</resourceModel>
            </featuredproduct>
            <featuredproduct_resource>
                <class>Dc_FeaturedProduct_Model_Resource</class>
                <entities>
                    <group>
                        <table>dc_featuredproduct_group</table>
                    </group>
                    <item>
                        <table>dc_featuredproduct_item</table>
                    </item>
                    <template>
                        <table>dc_featuredproduct_template</table>
                    </template>
                </entities>
            </featuredproduct_resource>
        </models>
        <resources>
            <featuredproduct_setup>
                <setup>
                    <module>Dc_FeaturedProduct</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </featuredproduct_setup>
            <featuredproduct_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </featuredproduct_write>
            <featuredproduct_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </featuredproduct_read>
        </resources>
    </global>
</config>
